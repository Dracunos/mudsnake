#:kivy 1.9.1


<MainRoot>:
    cols: 1
    

    ExitButton:
        id: exitbutton
        text: "exit"
        size_hint: (1, None)
        height: 80

    BoxLayout:
        orientation: "vertical"
        ScrollView:
            id: scrollbuffer
            scroll_y: 0
            OutputBuffer:
                id: outputbuffer
                size_hint_y: None
                height: 4000
                font_size: 30
                text_size: (self.width, self.height)
                font_name: "RobotoMono-Regular"
            
        InputBox:
            id: inputbox
            keyboard_suggestions: False
            size_hint: (1, None)
            height: 100
            root: root
            
    KeyboardOffset:
        id: kboffset
        size_hint_y: None
        height: 0

