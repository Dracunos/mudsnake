#:kivy 1.9.1


<MainRoot>:
    cols: 1
    

    ExitButton:
        id: exitbutton
        text: "exit"
        size_hint: (1, 0.06)
        
    Label:
        id: kbbutt
        text: "kb"
        size_hint: (1, 0.1)

    BoxLayout:
        orientation: "vertical"
        ScrollView:
            id: scrollbuffer
            OutputBuffer:
                id: outputbuffer
                size_hint_y: None
                height: 4000
                font_size: 30
                text_size: (self.width, self.height)
                font_name: "RobotoMono-Regular"
            
        InputBox:
            id: inputbox
            size_hint: (1, 0.06)
            
    KeyboardOffset:
        id: kboffset
        size_hint_y: None
        height: 0

